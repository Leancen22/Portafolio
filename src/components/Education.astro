---
import Section from "@/components/container/Section.astro";

import {education} from '@cv'
---

<Section title="EducaciÃ³n">
    <ul>
        {education.map(({institution, area, studyType, startDate, endDate, courses}) => {
            const startYear = new Date(startDate).getFullYear()
            const endYear = endDate != null ? new Date(endDate).getFullYear() : 'Actualidad'
            const years = startYear === endYear ? `${startYear}` : `${startYear} - ${endYear}`
            return (
                <li>
                    <article>
                        <header>
                            <div>
                                <h3>{institution}</h3>
                                <h4>{studyType}</h4>
                                <p class="limit">{area}</p>
                            </div>
                            <time>{years}</time>
                        </header>

                        <footer>
                            {
                                courses.map((course) => {
                                    return <span>{course}</span>
                                })
                            }
                        </footer>
                    </article> 
                </li>
            )
        })}
    </ul>
</Section>

<style>
    .limit {
        max-width: 600px;
    }
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
    article h3 {
        color: #222;
        font-weight: 400;
    }
    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    time {
        font-size: 0.85rem;
        color: #555;
    }

    footer {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }
    footer span {
        border-radius: 6px;
        background: #eee;
        color: black;
        font-size: .8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>