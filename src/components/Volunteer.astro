---
import Section from "@/components/container/Section.astro";

import {volunteer} from "@cv"
---

<Section title="Voluntariado">
    <ul>
        {volunteer.map(({organization, position, startDate, endDate, summary, url}) => {
            const startYear = new Date(startDate).getFullYear()
            const endYear = endDate != null ? new Date(endDate).getFullYear() : 'Actualidad'
            const years = `${startYear} - ${endYear}`
            return (
                <li>
                    <article>
                        <header>
                            <div>
                                <h3>{organization}</h3>
                                <h4>{position}</h4>
                            </div>
                            <time>{years}</time>
                        </header>

                        <footer>
                            <p>{summary}</p>
                        </footer>
                    </article> 
                </li>
            )
        })}
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
    article h3 {
        color: #222;
        font-weight: 400;
    }
    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    time {
        font-size: 0.85rem;
        color: #555;
    }
</style>